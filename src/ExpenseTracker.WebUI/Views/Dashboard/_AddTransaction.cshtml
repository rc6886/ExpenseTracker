<div class="col-lg-3 float-e-margins">
    <div style="margin-bottom: 20px">
        <a data-toggle="modal" class="btn btn-primary" href="#modal-form">Add Transaction</a>
    </div>
    <div id="modal-form" class="modal fade" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <h3 class="m-t-none m-b">Add Transaction</h3>

                            <form role="form">
                                <div class="form-group"><label>Vendor</label> <input v-model="addTransactionCommand.vendorName" type="text" placeholder="Enter Vendor" class="form-control"></div>
                                <div class="form-group"><label>Description</label> <input v-model="addTransactionCommand.description" type="text" placeholder="Enter Description" class="form-control"></div>
                                <div class="form-group"><label>Amount</label> <input v-model="addTransactionCommand.amount" type="number" step="0.01" placeholder="Enter Amount" class="form-control"></div>
                                <div class="form-group"><label>Date</label> <input type="date" placeholder="Date" class="form-control"></div>
                                <div class="form-group">
                                    <label>Type</label>
                                    <select v-model="addTransactionCommand.transactionType" class="form-control">
                                        <option v-bind:value="1">Income</option>
                                        <option v-bind:value="2">Expense</option>
                                    </select>
                                </div>
                                <div>
                                    <button v-on:click="addTransaction()" class="btn btn-sm btn-primary pull-left m-t-n-xs" type="submit"><strong>Save</strong></button>
                                    <button data-dismiss="modal" class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Close</strong></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



